<div id="<%= dom_id event %>">
  <p>
    <strong>Title:</strong>
    <%= event.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= event.location %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%=  event.start_time.strftime('%B %e, %Y %l:%M %p') %>
  </p>

  <% if event.end_time %>
    <p>
      <strong>End time:</strong>
      <%= event.end_time %>
    </p>
  <% end %>

  <p>
    <strong>Is this a work shift?:</strong>
    <%= event.is_work %>
  </p>
</div>
