<%= form_with(model:[@user, event]) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-details">
  <div class="input-box">
    <span class="details">
      <%= form.label :title %>
    </span>
    <%= form.text_field :title %>
  </div>

  <div class="input-box">
    <span class="details">
      <%= form.label :description %>
    </span>
    <%= form.text_field :description %>
  </div>

  <div class="input-box">
    <span class="details">
      <%= form.label :location %>
    </span>
    <%= form.text_field :location %>
  </div>

  <div class="input-box">
    <span class="details">
      <%= form.label :start_time %>
    </span>
    <%= form.datetime_field :start_time %>
  </div>

  <div class="input-box">
    <span class="details">
      <%= form.label :end_time %>
    </span>
    <%= form.datetime_field :end_time %>
  </div>

  <div class="checkmark">
    <span class="details">
      <%= form.label :is_work, "Is this work?" %>
    </span>
    <%= form.checkbox :is_work %>
  </div>
  </div>
  <div class="button">
    <%= form.submit %>
  </div>

<% end %>
