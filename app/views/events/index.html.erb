<p style="color: green"><%= notice %></p>

<% content_for :title, "Events" %>

<h1>Events for <%= @date %></h1>

<div id="events">
  <% @events.each do |event| %>
    <%= render event %>
    <p>
      <%= link_to "Show this event", user_event_path(event) %>
    </p>
  <% end %>
</div>

<%= link_to "New event", new_user_event_path %>
