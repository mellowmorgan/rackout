<div class="form-body">
  <div class="form-container">
    <% content_for :title, "Editing earning" %>

    <h1>Editing earning</h1>

    <%= render "form", earning: @earning %>

    <br>

    <div>
      <%= link_to "Show this earning", user_event_earning_path(@user, @event, @earning) %> |
